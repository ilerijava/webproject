<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>İleri Java Web Uygulaması</display-name>
  <servlet>
  	<servlet-name>Color</servlet-name>
  	<servlet-class>ColorController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<servlet-class>LoginController</servlet-class>
  </servlet>
    
  <servlet-mapping>
  	<servlet-name>Color</servlet-name>
  	<url-pattern>/ColorServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  
  
<!-- Welcome page -->
	<welcome-file-list>
		<welcome-file>faces/index.xhtml</welcome-file>
	</welcome-file-list>
  
</web-app>
